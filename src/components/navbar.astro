---
import MdIcon from "./icon/mdIcon.astro";

interface Props {
  activePage?: string;
}

const { activePage } = Astro.props;
---

<div class="navbar">
  <ul class="navbar-nav">
    <li class="navbar-nav-item">
      <a href="/#home"><MdIcon classes={["me-2"]}>home</MdIcon>Home</a>
    </li>
    <li class:list={["navbar-nav-item", { active: activePage == "blog" }]}>
      <a href="/blog"><MdIcon classes={["me-2"]}>book_ribbon</MdIcon>Blog</a>
    </li>
    <li class:list={["navbar-nav-item", { active: activePage == "projects" }]}>
      <a href="/projects"
        ><MdIcon classes={["me-2"]}>construction</MdIcon>Projects</a
      >
    </li>
    <li class:list={["navbar-nav-item", { active: activePage == "music" }]}>
      <a href="/music"><MdIcon classes={["me-2"]}>album</MdIcon>Music</a>
    </li>
    <li class:list={["navbar-nav-item", { active: activePage == "contacts" }]}>
      <a href="/contacts"
        ><MdIcon classes={["me-2"]}>alternate_email</MdIcon>Contacts</a
      >
    </li>
    <li class:list={["navbar-nav-item", { active: activePage == "homelab" }]}>
      <a href="/homelab"><MdIcon classes={["me-2"]}>science</MdIcon>Homelab</a>
    </li>
  </ul>
</div>

<style lang="scss">
  ul {
    margin: 0;
    padding: 0;
  }

  .navbar {
    position: sticky;
    top: 0;
    width: 100%;
    padding: 1rem;
    background: var(--ctp-mantle);
    font-family: "SUSE Mono", sans-serif;
  }

  .navbar-nav {
    list-style-type: none;
    display: flex;
    flex-flow: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0 1rem;
  }

  .navbar-nav-item {
    padding: 0.5rem;
    border-radius: 8px;

    &.active {
      font-weight: bold;
      color: var(--ctp-lavender);
    }
  }
</style>
